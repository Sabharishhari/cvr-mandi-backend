generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql/sqlite based on your setup
  url      = env("DATABASE_URL")
}

model PurchasePrice {
  id                    String   @id @default(uuid())
  dailyPriceId          Json
  dateField             String
  commodityNameId    String   @unique
  minPurchasePriceKg    Float
  maxPurchasePriceKg    Float
  dateOfPrice           DateTime
  commodityName         String
  commodityCode         String
  maxPmp                Float
  minPmp                Float

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model SalesPrice {
  id                  String   @id @default(uuid())
  dailySalesPriceId   Json
  pricePerKg          Float
  dateOfPrice         String
  commodityCode       String
  commodityNameId    String   @unique
  siNo                String
  commodityName       String
  commodityNameId     String

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
